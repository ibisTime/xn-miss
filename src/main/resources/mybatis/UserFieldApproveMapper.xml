<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ogc.standard.dao.IUserFieldApproveDAO">
	<resultMap id="userFieldApprove_DB_Result" type="userFieldApprove">
		<result column="id" property="id" />
		<result column="type" property="type" />
		<result column="field" property="field" />
		<result column="captcha" property="captcha" />
		<result column="id_hold" property="idHold" />
		<result column="apply_user" property="applyUser" />
		<result column="apply_datetime" property="applyDatetime"/>
		<result column="status" property="status" />
		<result column="approve_user" property="approveUser" />
		<result column="approve_datetime" property="approveDatetime" />
		<result column="reamark" property="remark" />
	</resultMap>
	
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">			
			<if test="id != null and id != '' ">
				AND t.id = #{id}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
			<if test="type != null and type != '' ">
				AND t.type = #{type}
			</if>
			<if test="applyUser != null and applyUser != '' ">
				AND t.apply_user = #{applyUser}
			</if>
			<if test="approveUser != null and approveUser != '' ">
				AND t.approve_user = #{approveUser}
			</if>
		</trim>
	</sql>
	
	<insert id="insert_user_field_approve" parameterType="userFieldApprove">
		INSERT INTO tstd_user_field_approve(
		type
		,field
		,captcha
		,id_hold
		,apply_user
		,apply_datetime
		,status
		
		)
		VALUES(
		#{type}
		,#{field}
		,#{captcha}
		,#{idHold}
		,#{applyUser}
		,#{applyDatetime}
		,#{status}
		)
	</insert>
	
	<select id="select_approve_count" parameterType="userFieldApprove" resultType="java.lang.Long">
		SELECT count(1) FROM tstd_user_field_approve t 
		<include refid="where_condition"/>
	</select>
	
	<select id="select_user_field_approve" parameterType="userFieldApprove" resultMap="userFieldApprove_DB_Result">
		SELECT
		t.id
		,t.field
		,t.captcha
		,t.id_hold
		,t.apply_user
		,t.apply_datetime
		,t.status
		,t.approve_user
		,t.approve_datetime
		,t.remark
		FROM tstd_user_field_approve t 
		<include refid="where_condition"/>
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				${order}
			</if>
		</trim>
	</select>
	
	
	<update id="update_result" parameterType="userFieldApprove">
		UPDATE tstd_user_field_approve
		SET
			status=#{status}
			,approve_user=#{approveUser}
			,approve_datetime=#{approveDatetime}
			,remark=#{remark}
		WHERE
		id=#{id}
	</update>
	
	
</mapper>