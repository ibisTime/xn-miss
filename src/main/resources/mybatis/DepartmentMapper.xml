<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ogc.standard.dao.IDepartmentDAO">
	<resultMap id="department_DB_Result" type="department">
		<result column="code" property="code" />
		<result column="company_code" property="companyCode" />
		<result column="name" property="name" />
		<result column="leader" property="leader" />
		<result column="leader_mobile" property="leaderMobile" />
		<result column="parent_code" property="parentCode" />
		<result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
		<result column="remark" property="remark" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="name != null and name != '' ">
				AND t.name like "%"#{name}"%"
			</if>
			<if test="leader != null and name != '' ">
				AND t.leader like "%"#{leader}"%"
			</if>
			<if test="leaderMobile != null and leaderMobile != '' ">
				AND t.leader_mobile like "%"#{leaderMobile}"%"
			</if>
			<if test="parentCode != null and parentCode != '' ">
				AND t.parent_code = #{parentCode}
			</if>
			<if test="updater != null and updater != '' ">
				AND t.updater = #{updater}
			</if>
			<if test="companyCode != null and companyCode != '' ">
				AND t.company_code = #{companyCode}
			</if>
			
		</trim>
	</sql>
	<select id="select_department" parameterType="department" resultMap="department_DB_Result">
		SELECT
		t.code
		,t.company_code
		,t.name
		,t.leader
		,t.leader_mobile
		,t.parent_code
		,t.updater
		,t.update_datetime
		,t.remark
		FROM
		tsys_department t 
		<include refid="where_condition" />
	</select>

	<select id="select_department_count" parameterType="department"
		resultType="java.lang.Long">
		SELECT count(1) FROM tsys_department t
		<include refid="where_condition" />
	</select>

	<insert id="insert_department" parameterType="department">
		INSERT INTO
		tsys_department(
		code
		,company_code
		,name
		,leader
		,leader_mobile
		,parent_code
		,updater
		,update_datetime
		,remark
		)
		VALUES(
		#{code}
		,#{companyCode}
		,#{name}
		,#{leader}
		,#{leaderMobile}
		,#{parentCode}
		,#{updater}
		,#{updateDatetime}
		,#{remark}
		)
	</insert>

	<delete id="delete_department" parameterType="department">
		DELETE FROM
		tsys_department
		WHERE
		code = #{code}
	</delete>
	
	<update id="update_department" parameterType="department">
		UPDATE tsys_department
		SET
		name = #{name}
		,company_code = #{companyCode}
		,leader = #{leader}
		,leader_mobile = #{leaderMobile}
		,updater = #{updater}
		,parent_code = #{parentCode}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>
</mapper>