<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ogc.standard.dao.IAwardMonthDAO">
	<resultMap type="awardMonth" id="awardMonth_DB_Result">
		<result column="id" property="id" />
		<result column="user_id" property="userId" />
		<result column="unsettle_count" property="unsettleCount" />
		<result column="settle_count" property="settleCount" />
		<result column="nosettle_count" property="nosettleCount" />
		<result column="next_unsettle_count" property="nextUnsettleCount" />
		<result column="current_count" property="currentCount" />
		<result column="start_date" property="startDate" />
		<result column="end_date" property="endDate" />
		<result column="create_datetime" property="createDatetime" />
		<result column="settle_datetime" property="settleDatetime" />
		<result column="remark" property="remark" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="id != null and id != '' ">
				AND t.id = #{id}
			</if>
			<if test="userId != null and userId != '' ">
				AND t.user_id = #{userId}
			</if>
			<if test="createDatetimeStart != null and createDatetimeStart != '' ">
				<![CDATA[AND t.create_datetime >= #{createDatetimeStart}]]>
			</if>
			<if test="createDatetimeEnd != null and createDatetimeEnd != '' ">
				<![CDATA[AND t.create_datetime <= #{createDatetimeEnd}]]>
			</if>
			<if test="now != null and now != '' ">
				<![CDATA[AND t.start_date <= #{now}]]>
			</if>
			<if test="now != null and now != '' ">
				<![CDATA[AND t.end_date >= #{now}]]>
			</if>
		</trim>
	</sql>
	
	<insert id="insert_award_month" parameterType="awardMonth">
		INSERT INTO
		tstd_award(
		user_id
		,unsettle_count
		,settle_count
		,nosettle_count
		,next_unsettle_count
		,current_count
		,start_date
		,end_date
		,create_datetime
		,settle_datetime
		,remark
		)
		VALUES(
		#{userId}
		,#{unsettleCount}
		,#{settleCount}
		,#{nosettleCount}
		,#{nextUnsettleCount}
		,#{currentCount}
		,#{startDate}
		,#{endDate}
		,#{createDatetime}
		,#{settleDatetime}
		,#{remark}
		)
	</insert>	
	<select id="select_award_month" resultMap="awardMonth_DB_Result" parameterType="awardMonth">
		SELECT
		t.id
		,t.user_id
		,t.unsettle_count
		,t.settle_count
		,t.nosettle_count
		,t.next_settle_count
		,t.current_count
		,t.start_date
		,t.end_date
		,t.create_datetime
		,t.settle_datetime
		,t.remark
		FROM
		tstd_award t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>
	
	<select id="select_award_month_count" parameterType="awardMonth"
		resultType="java.lang.Long">
		SELECT count(1) FROM tstd_award_month t
		<include refid="where_condition" />
	</select>
	
	<update id="update_award_unsettle" parameterType="awardMonth">
		UPDATE tstd_award_month
		SET
		next_unsettle_count=#{nextUnsettleCount}
		WHERE
		id=#{id}
	</update>
	
	<update id="update_award_settle" parameterType="awardMonth">
		UPDATE tstd_award_month
		SET
		unsettle_count=#{unsettleCount}
		,settle_count=#{settle_count}
		,nosettle_count=#{nosettleCount}
		,current_count=#{currentCount}
		,settle_datetime=#{settleDatetime}
		,remark=#{remark}
		WHERE
		id=#{id}
	</update>
	
</mapper>
