<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ogc.standard.dao.ISimuMatchResultHistoryDAO">
	<resultMap id="simuMatchResultHistory_DB_Result" type="simuMatchResultHistory">
		<result column="id" property="id" />
		<result column="buy_order_code" property="buyOrderCode" />
		<result column="sell_order_code" property="sellOrderCode" />
		<result column="buy_order_detail_code" property="buyOrderDetailCode" />
		<result column="sell_order_detail_code" property="sellOrderDetailCode" />
		
		<result column="symbol" property="symbol" />
		<result column="to_symbol" property="toSymbol" />
		<result column="buy_user_id" property="buyUserId" />
		<result column="sell_user_id" property="sellUserId" />
		<result column="exchange_rate" property="exchangeRate" />
		
		<result column="symbol_count" property="symbolCount" />
		<result column="to_symbol_count" property="toSymbolCount" />
		<result column="buy_fee" property="buyFee" />
		<result column="sell_fee" property="sellFee" />
		<result column="create_datetime" property="createDatetime" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="id != null and id != '' ">
				AND t.id = #{id}
			</if>
			<if test="symbol != null and symbol != '' ">
				AND t.symbol = #{symbol}
			</if>
			<if test="toSymbol != null and toSymbol != '' ">
				AND t.to_symbol = #{toSymbol}
			</if>
			<if test="createDatetimeStart != null and createDatetimeStart != '' ">
				<![CDATA[AND t.create_datetime >= #{createDatetimeStart}]]>
			</if>
			<if test="createDatetimeEnd != null and createDatetimeEnd != '' ">
				<![CDATA[AND t.create_datetime <= #{createDatetimeEnd}]]>
			</if>
		</trim> 
	</sql>
	<select id="select_simuMatchResultHistory" parameterType="simuMatchResultHistory" resultMap="simuMatchResultHistory_DB_Result">
		SELECT
		t.id
		,t.buy_order_code
		,t.sell_order_code
		,t.buy_order_detail_code
		,t.sell_order_detail_code
		
		,t.symbol
		,t.to_symbol
		,t.buy_user_id
		,t.sell_user_id
		,t.exchange_rate
		
		,t.symbol_count
		,t.to_symbol_count
		,t.buy_fee
		,t.sell_fee
		,t.create_datetime
		FROM
		tsimu_match_result_history t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_simuMatchResultHistory_count" parameterType="simuMatchResultHistory"
		resultType="java.lang.Long">
		SELECT count(1) FROM tsimu_match_result_history t
		<include refid="where_condition" />
	</select>

	<insert id="insert_simuMatchResultHistory" parameterType="simuMatchResultHistory">
		INSERT INTO
		tsimu_match_result_history(
		id
		,buy_order_code
		,sell_order_code
		,buy_order_detail_code
		,sell_order_detail_code
		
		,symbol
		,to_symbol
		,buy_user_id
		,sell_user_id
		,exchange_rate
		
		,symbol_count
		,to_symbol_count
		,buy_fee
		,sell_fee
		,create_datetime
		)
		VALUES(
		#{id}
		,#{buyOrderCode}
		,#{sellOrderCode}
		,#{buyOrderDetailCode}
		,#{sellOrderDetailCode}
		
		,#{symbol}
		,#{toSymbol}
		,#{buyUserId}
		,#{sellUserId}
		,#{exchangeRate}
		
		,#{symbolCount}
		,#{toSymbolCount}
		,#{buyFee}
		,#{sellFee}
		,#{createDatetime}
		)
	</insert>



</mapper>