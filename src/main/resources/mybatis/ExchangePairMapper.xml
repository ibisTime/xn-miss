<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ogc.standard.dao.IExchangePairDAO">
	<resultMap id="exchangePair_DB_Result" type="exchangePair">
		<result column="id" property="id" />
		<result column="exchange_ename" property="exchangeEname" />
		<result column="symbol" property="symbol" />
		<result column="to_symbol" property="toSymbol" />
		<result column="pair" property="pair" />
		
		<result column="price" property="price" />
		<result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="id != null and id !=''">
				AND t.id = #{id}
			</if>
			<if test="exchangeEname != null and exchangeEname != '' ">
				AND t.exchange_ename like "%"#{exchangeEname}"%"
			</if>
			<if test="symbol != null and symbol != '' ">
				AND t.symbol = #{symbol}
			</if>
			<if test="toSymbol != null and toSymbol != '' ">
				AND t.to_symbol = #{toSymbol}
			</if>
			<if test="pair != null and pair != '' ">
				AND t.pair = #{pair}
			</if>
		</trim>
	</sql>
	<select id="select_exchangePair" parameterType="exchangePair" resultMap="exchangePair_DB_Result">
		SELECT
		t.id
		,t.exchange_ename
		,t.symbol
		,t.to_symbol
		,t.pair
		
		,t.price
		,t.updater
		,t.update_datetime
		FROM
		tmk_exchange_pair t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>
	
	<select id="select_exchangePair_show" parameterType="exchangePair" resultMap="exchangePair_DB_Result">
		SELECT
		t.id
		,t.exchange_ename
		,upper(t.symbol) as symbol
		,upper(t.to_symbol) as to_symbol
		,pair
		
		,t.price
		,t.updater
		,t.update_datetime
		FROM
		tmk_exchange_pair t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_exchangePair_count" parameterType="exchangePair"
		resultType="java.lang.Long">
		SELECT count(1) FROM tmk_exchange_pair t
		<include refid="where_condition" />
	</select>

	<update id="update_price" parameterType="exchangePair">
		UPDATE tmk_exchange_pair
		SET
		price = #{price}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		WHERE id = #{id}		
	</update>
</mapper>