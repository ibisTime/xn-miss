<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ogc.standard.dao.IHandicapDAO">
	<resultMap id="handicap_DB_Result" type="handicap">
		<result column="id" property="id" />
		<result column="order_code" property="orderCode" />
		<result column="price" property="price" />
		<result column="count" property="count" />
		<result column="direction" property="direction" />
		
		<result column="symbol" property="symbol" />
		<result column="to_symbol" property="toSymbol" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="direction != null and direction != '' ">
				AND t.direction = #{direction}
			</if>
			<if test="symbol != null and symbol != '' ">
				AND t.symbol = #{symbol}
			</if>
			<if test="toSymbol != null and toSymbol != '' ">
				AND t.to_symbol = #{toSymbol}
			</if>
		</trim>
	</sql>
	<select id="select_handicap" parameterType="handicap" resultMap="handicap_DB_Result">
		SELECT
		t.id
		,t.order_code
		,t.price
		,t.count
		,t.direction
		
		,t.symbol
		,t.to_symbol
		FROM
		tsimu_handicap t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_handicap_count" parameterType="handicap"
		resultType="java.lang.Long">
		SELECT count(1) FROM tsimu_handicap t
		<include refid="where_condition" />
	</select>

	<insert id="insert_handicap" parameterType="handicap">
		INSERT INTO
		tsimu_handicap(
		order_code
		,price
		,count
		,direction
		,symbol
		
		,to_symbol
		)
		VALUES(
		#{orderCode}
		,#{price}
		,#{count}
		,#{direction}
		,#{symbol}
		
		,#{toSymbol}
		)
	</insert>

	<update id="update_handicap" parameterType="handicap">
		UPDATE tsimu_handicap
		SET
		count = #{count}
		
		WHERE order_code = #{orderCode}
	</update>

	<update id="delete_handicap" parameterType="handicap">
		DELETE FROM 
		tsimu_handicap
		
		WHERE order_code = #{orderCode}
	</update>

</mapper>