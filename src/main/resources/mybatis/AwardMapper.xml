<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ogc.standard.dao.IAwardDAO">
	<resultMap type="award" id="award_DB_Result">
		<result column="id" property="id" />
		<result column="user_id" property="userId" />
		<result column="user_kind" property="userKind" />
		<result column="currency" property="currency" />
		<result column="count" property="count" />
		<result column="order_count" property="orderCount" />
		<result column="rate" property="rate" />
		<result column="ref_type" property="refType" />
		<result column="ref_code" property="refCode" />
		<result column="ref_note" property="refNote" />
		<result column="status" property="status" />
		<result column="create_datetime" property="createDatetime" />
		<result column="handle_datetime" property="handleDatetime" />
		<result column="remark" property="remark" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="id != null and id != '' ">
				AND t.id = #{id}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
			<if test="refType != null and refType != '' ">
				AND t.ref_type = #{refType}
			</if>
			<if test="refCode != null and refCode != '' ">
				AND t.ref_code = #{refCode}
			</if>
			<if test="userId != null and userId != '' ">
				AND t.user_id = #{userId}
			</if>
			<if test="createDatetimeStart != null and createDatetimeStart != '' ">
				<![CDATA[AND t.create_datetime >= #{createDatetimeStart}]]>
			</if>
			<if test="createDatetimeEnd != null and createDatetimeEnd != '' ">
				<![CDATA[AND t.create_datetime <= #{createDatetimeEnd}]]>
			</if>
		</trim>
	</sql>
	
	<insert id="insert_award" parameterType="award">
		INSERT INTO
		tstd_award(
		user_id
		,user_kind
		,currency
		,count
		,order_count
		,rate
		,ref_type
		,ref_code
		,ref_note
		,status
		,create_datetime
		,handle_datetime
		,remark
		)
		VALUES(
		#{userId}
		,#{userKind}
		,#{currency}
		,#{count}
		,#{orderCount}
		,#{rate}
		,#{refType}
		,#{refCode}
		,#{refNote}
		,#{status}
		,#{createDatetime}
		,#{handleDatetime}
		,#{remark}
		)
	</insert>	
	<select id="select_award" resultMap="award_DB_Result" parameterType="award">
		SELECT
		t.id
		,t.user_id
		,t.user_kind
		,t.currency
		,t.count
		,t.order_count
		,t.rate
		,t.ref_type
		,t.ref_code
		,t.ref_note
		,t.status
		,t.create_datetime
		,t.handle_datetime
		,t.remark
		FROM
		tstd_award t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>
	
	<select id="select_award_count" parameterType="award"
		resultType="java.lang.Long">
		SELECT count(1) FROM tstd_award t
		<include refid="where_condition" />
	</select>
	
	<select id="select_count_sum" parameterType="award"
		resultType="java.math.BigDecimal">
		SELECT SUM(count) FROM tstd_award t
		<include refid="where_condition" />
	</select>
	
	<update id="update_status" parameterType="award">
		UPDATE tstd_award
		SET
		status=#{status}
		,handle_datetime=#{handleDatetime}
		,remark=#{remark}
		WHERE
		id=#{id}
	</update>
</mapper>
