<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ogc.standard.dao.ICurrencyRateDAO">

    <resultMap id="BaseResultMap" type="com.ogc.standard.domain.CurrencyRate">
        <result column="id" property="id" />
        <result column="currency" jdbcType="VARCHAR" property="currency"/>
        <result column="refer_currency"  property="referCurrency"/>
        <result column="origin" jdbcType="VARCHAR" property="origin"/>
        <result column="rate" jdbcType="DECIMAL" property="rate"/>
        <result column="update_datetime"  property="updateDatetime"/>
    </resultMap>

    <sql id="Base_Column_List">
       id, currency, refer_currency, origin, rate, update_datetime
    </sql>

    <sql id="whereCondition">
        <trim prefix="WHERE" prefixOverrides="AND || OR">
            <if test="currency != null and currency != ''">
                and `currency` = #{currency}
            </if>
        </trim>
    </sql>

    <insert id="insert" parameterType="com.ogc.standard.domain.CurrencyRate">
        INSERT INTO tcoin_currency_rate (currency, refer_currency, origin,
                                         rate, update_datetime)
        VALUES (#{currency}, #{referCurrency}, #{origin,jdbcType=VARCHAR},
                #{rate}, #{updateDatetime,jdbcType=TIMESTAMP})
    </insert>

    <update id="update" parameterType="com.ogc.standard.domain.CurrencyRate">
        UPDATE tcoin_currency_rate
        SET refer_currency  = #{referCurrency},
            origin          = #{origin},
            rate            = #{rate,jdbcType=DECIMAL},
            update_datetime = #{updateDatetime,jdbcType=TIMESTAMP}
        WHERE currency = #{currency,jdbcType=VARCHAR}
    </update>
    
    <select id="selectTotalCount" parameterType="com.ogc.standard.domain.CurrencyRate" resultType="long">
        SELECT
            count(1)
        FROM tcoin_currency_rate
        <include refid="whereCondition"/>
    </select>

    <select id="select" parameterType="com.ogc.standard.domain.CurrencyRate" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM tcoin_currency_rate
       <include refid="whereCondition"/>
        ORDER BY `id` DESC
    </select>

