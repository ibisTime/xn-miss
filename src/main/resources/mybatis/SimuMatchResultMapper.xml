<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ogc.standard.dao.ISimuMatchResultDAO">
	<resultMap id="simuMatchResult_DB_Result" type="simuMatchResult">
		<result column="id" property="id" />
		<result column="buy_order_code" property="buyOrderCode" />
		<result column="sell_order_code" property="sellOrderCode" />
		<result column="buy_order_detail_code" property="buyOrderDetailCode" />
		<result column="sell_order_detail_code" property="sellOrderDetailCode" />
		
		<result column="symbol" property="symbol" />
		<result column="to_symbol" property="toSymbol" />
		<result column="buy_user_id" property="buyUserId" />
		<result column="sell_user_id" property="sellUserId" />
		<result column="exchange_rate" property="exchangeRate" />
		
		<result column="symbol_count" property="symbolCount" />
		<result column="to_symbol_count" property="toSymbolCount" />
		<result column="buy_fee" property="buyFee" />
		<result column="sell_fee" property="sellFee" />
		<result column="create_datetime" property="createDatetime" />
	</resultMap>
	
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="id != null and id != '' ">
				AND t.id = #{id}
			</if>
			<if test="buyOrderCode != null and buyOrderCode != '' ">
				AND t.buy_order_code = #{buyOrderCode}
			</if>
			<if test="sellOrderCode != null and sellOrderCode != '' ">
				AND t.sell_order_code = #{sellOrderCode}
			</if>
			<if test="buyOrderDetailCode != null and buyOrderDetailCode != '' ">
				AND t.buy_order_detail_code = #{buyOrderDetailCode}
			</if>
			<if test="sellOrderDetailCode != null and sellOrderDetailCode != '' ">
				AND t.sell_order_detail_code = #{sellOrderDetailCode}
			</if>
		</trim>
	</sql>
	
	<select id="select_simuMatchResult" parameterType="simuMatchResult" resultMap="simuMatchResult_DB_Result">
		SELECT
		t.id
		,t.buy_order_code
		,t.sell_order_code
		,t.buy_order_detail_code
		,t.sell_order_detail_code
		
		,t.symbol
		,t.to_symbol
		,t.buy_user_id
		,t.sell_user_id
		,t.exchange_rate
		
		,t.symbol_count
		,t.to_symbol_count
		,t.buy_fee
		,t.sell_fee
		,t.create_datetime
		FROM
		tsimu_match_result t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_simuMatchResult_count" parameterType="simuMatchResult"
		resultType="java.lang.Long">
		SELECT count(1) FROM tsimu_match_result t
		<include refid="where_condition" />
	</select>

	<insert id="insert_simuMatchResult" parameterType="simuMatchResult">
		INSERT INTO
		tsimu_match_result(
		id
		,buy_order_code
		,sell_order_code
		,buy_order_detail_code
		,sell_order_detail_code
		
		,symbol
		,to_symbol
		,buy_user_id
		,sell_user_id
		,exchange_rate
		
		,symbol_count
		,to_symbol_count
		,buy_fee
		,sell_fee
		,create_datetime
		)
		VALUES(
		#{id}
		,#{buyOrderCode}
		,#{sellOrderCode}
		,#{buyOrderDetailCode}
		,#{sellOrderDetailCode}
		
		,#{symbol}
		,#{toSymbol}
		,#{buyUserId}
		,#{sellUserId}
		,#{exchangeRate}
		
		,#{symbolCount}
		,#{toSymbolCount}
		,#{buyFee}
		,#{sellFee}
		,#{createDatetime}
		)
	</insert>

	<update id="update_simuMatchResult" parameterType="simuMatchResult">
		UPDATE tsimu_match_result
		SET
		symbol_count = #{symbolCount}
		,to_symbol_count = #{toSymbolCount}
		,buy_fee = #{buyFee}
		,sell_fee = #{sellFee}
		
		WHERE id = #{id}
	</update>

	<update id="delete_simuMatchResult" parameterType="handicap">
		DELETE FROM 
		tsimu_match_result
		
		WHERE id = #{id}
	</update>

</mapper>