<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ogc.standard.dao.IUserIdAuthDAO">
	<resultMap id="userIdAuth_DB_Result" type="userIdAuth">
		<result column="id" property="id" />
		<result column="country" property="country" />
		<result column="real_name" property="realName" />
		<result column="id_kind" property="idKind" />
		<result column="id_no" property="idNo" />
		<result column="id_face" property="idFace" />
		<result column="id_Oppo" property="idOppo" />
		<result column="id_hold" property="idHold" />
		<result column="apply_user" property="applyUser" />
		<result column="apply_datetime" property="applyDatetime"/>
		<result column="status" property="status" />
		<result column="approve_user" property="approveUser" />
		<result column="approve_datetime" property="approveDatetime" />
		<result column="reamark" property="remark" />
	</resultMap>
	
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">			
			<if test="id != null and id != '' ">
				AND t.id = #{id}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
			<if test="applyUser != null and applyUser != '' ">
				AND t.apply_user = #{applyUser}
			</if>
			<if test="approveUser != null and approveUser != '' ">
				AND t.approve_user = #{approveUser}
			</if>
		</trim>
	</sql>
	
	<insert id="insert_user_id_auth" parameterType="userIdAuth">
		INSERT INTO tstd_user_id_auth(
		country
		,real_name
		,id_kind
		,id_no
		,id_face
		,id_oppo
		,id_hold
		,apply_user
		,apply_datetime
		,status
		
		)
		VALUES(
		#{country}
		,#{realName}
		,#{idKind}
		,#{idNo}
		,#{idFace}
		,#{idOppo}
		,#{idHold}
		,#{applyUser}
		,#{applyDatetime}
		,#{status}
		)
	</insert>
	
	<select id="select_apply_count" parameterType="userIdAuth" resultType="java.lang.Long">
		SELECT count(1) FROM tstd_user_id_auth t 
		<include refid="where_condition"/>
	</select>
	
	<select id="select_user_id_auth" parameterType="userIdAuth" resultMap="userIdAuth_DB_Result">
		SELECT
		t.id
		,t.country
		,t.real_name
		,t.id_kind
		,t.id_no
		,t.id_face
		,t.id_oppo
		,t.id_hold
		,t.apply_user
		,t.apply_datetime
		,t.status
		,t.approve_user
		,t.approve_datetime
		,t.remark
		FROM tstd_user_id_auth t 
		<include refid="where_condition"/>
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				${order}
			</if>
		</trim>
	</select>
	
	
	<update id="update_result" parameterType="userIdAuth">
		UPDATE tstd_user_id_auth
		SET
			status=#{status}
			,approve_user=#{approveUser}
			,approve_datetime=#{approveDatetime}
			,remark=#{remark}
		WHERE
		id=#{id}
	</update>
	
	
</mapper>